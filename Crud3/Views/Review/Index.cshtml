@using BookReviewingMVC.Models;
@model IEnumerable<Review>
@{
    ViewData["Title"] = "Index";
}


<div class="row m-3">
    <div class="col-6">
        <h2>Reviews</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Review" asp-action="Create" class="btn btn-primary">
            Create
        </a>
    </div>
</div>

<table class="table table-striped" style="width:100%">

    <thead>
        <tr>
            <th>Id</th>
            <th>HeadLine</th>
            <th>ReviewText</th>
            <th>Rating</th>
            <th>Book</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var n in Model)
        {
            <tr>
                <td>@n.Id</td>
                <td>@n.HeadLine</td>
                <td>@n.ReviewText</td>
                <td>@n.Rating</td>
                <td>@n.Book.Title</td>
                <td width="10%">
                    <a asp-controller="Review" asp-action="Update" asp-route-id="@n.Id" class="btn btn-primary">Update</a>
                </td>
                <td width="10%">
                    <a asp-controller="Review" asp-action="Delete" asp-route-id="@n.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
